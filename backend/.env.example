# Database Configuration
MONGO_URI=mongodb://localhost:27017/proconnect
# For MongoDB Atlas: MONGO_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/proconnect

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRE=30d

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Configuration (for notifications and verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@proconnect.com

# Redis Configuration (for caching and sessions - optional)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=5

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Third-party API Keys (optional integrations)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
LINKEDIN_CLIENT_ID=your_linkedin_client_id  
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true
NOTIFICATION_BATCH_SIZE=50

# Search and Analytics
ELASTICSEARCH_URL=http://localhost:9200
ANALYTICS_TRACKING_ID=your_analytics_id

# Admin Configuration
ADMIN_EMAIL=admin@proconnect.com
ADMIN_PASSWORD=change_this_admin_password

# Feature Flags
ENABLE_MESSAGING=true
ENABLE_GROUPS=true
ENABLE_JOBS=true
ENABLE_COMPANIES=true
ENABLE_ANALYTICS=true

# API Configuration
API_VERSION=2.0.0
API_RATE_LIMIT=1000
API_TIMEOUT=30000
